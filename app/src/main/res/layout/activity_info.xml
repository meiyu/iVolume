<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="336dp"
                android:layout_height="243dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/volume_img" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageView2"
                android:text="        iVolume是人机交互课程第四小组设计的一款智能音量调节助手，它可以根据地点、前台app、接入设备、环境噪音自动调节手机当前的音量。"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView12"
                android:text="        不同于传统的IF-TTT模式，iVolume省去了用户手动设置规则的环节，在场景切换时根据用户的历史喜好来决策音量调节。同时增加了反馈机制，利用用户调节音量的行为本身，加以问卷的辅助，让音量调节更加精准与个性化。"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView13"
                android:text="        iVolume还拥有启动暂停开关和设置界面，可以精确控制服务何时启用，在何种情境下启用，赋予用户更强的掌控感，让“自动调节”这项服务更容易被大众接受。"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="172dp"
                android:layout_height="101dp"
                app:srcCompat="@drawable/ivolume_logo"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/textView14"
                />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>